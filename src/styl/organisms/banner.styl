//
// Banner
// 
// 1. Structure
// 2. Blocks
//
// --------------------------------------------------

.banner  
    block-base()
    lost-center $screen-lg $space-md flex  
    

// 
// 1. Structure 
// --------------------------------------------------

.banner-main
    order 2
    lost-column 3/7 0 0 flex
    align-items center 
    
.banner-aside 
    order 1
    lost-column 2/7 0 0 flex
    
    &:last-child 
        order 3
    

// 
// 2. Blocks
// --------------------------------------------------

.banner-box
    bg        = $brand-primary
    bg-darken = 25%
    background $brand-primary
    color #fff 
    display flex
    justify-content center
    flex-direction column
    padding $space-md
    transition background .2s ease-in-quad

    &:hover
    &:focus   
        background darken(bg, bg-darken)
            
    .banner-aside &
        font(h3, bold)
        height 25vh
        
    .banner-main &
        font(h1, bold)
        height 50vh
        text-align center
        
        
    // Set colors
    // --------------------------------------------------
    
    .banner-aside:nth-child(2) &:nth-child(even) 
    .banner-aside:nth-child(3) &:nth-child(odd) 
        bg = $brand-secondary
        background bg
        
        &:hover
        &:focus 
            background darken(bg, bg-darken)
         
    .banner-main & 
        bg = $brand-alternate
        background $brand-alternate
        
        &:hover
        &:focus 
            
            background darken(bg, bg-darken)

        
    // Set detail
    // --------------------------------------------------
    
    .banner-aside:nth-child(2) &:first-child 
    .banner-aside:nth-child(3) &:last-child
        position relative
        
        &:before 
            content ''
            background $brand-primary
            position absolute 0
            transition background .2s ease-in-quad
            width 100vw
            
        &:hover
        &:focus  
            &:before  
                background darken(bg, bg-darken)
                   


    .banner-aside:nth-child(2) &:first-child 
        &:before 
            left auto
            right 100%
            
    .banner-aside:nth-child(3) &:last-child
        &:before 
            left 100%
        
    
        
    // Types
    // --------------------------------------------------
    
    .date
        color rgba(#fff, .6)
    

         
         
        