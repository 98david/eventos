//
// Event
// 
// 1. Media
// 2. Main
// 3. List
//
// --------------------------------------------------
  
.event 
    display flex
    flex-direction column 
    
    +above('xs') 
        flex-direction row
    
    &:not(:last-child)  
        border-bottom solid 1px rgba($gray, .2)
        padding-bottom $space-lg
        margin-bottom $space-lg
    
      
    // Types    
    // --------------------------------------------------
      
    .title 
        font(h2, bold) 
        margin-bottom $space
    

// 
// 1. Media
// --------------------------------------------------

.event-media 
    text-align center

    +above('sm') 
        lost-column 3/7 flex
      
    +above('lg') 
        lost-column 2/7 flex 
       

// 
// 2. Main
// --------------------------------------------------

.event-main
    grid-space()
    
    +above('sm') 
        lost-column 4/7 flex
          
    +above('lg') 
        lost-column 5/7 flex 
       

// 
// 3. List
// --------------------------------------------------

.event-list 
    reset(list)
    font(p2)
    display flex  
    flex-direction column 
    margin-top $space-lg

    +above('lg') 
        flex-direction row


.event-list--item
    &:not(:last-child) 
        margin-bottom $space-xs 
        
        +above('lg') 
            margin-right $space 
            
            &:last-child  
                lost-column 4/7 flex 


     